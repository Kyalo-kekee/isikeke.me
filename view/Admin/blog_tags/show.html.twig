{% extends 'admin.html.twig' %}

{% block title %}Tags{% endblock %}

{% block body %}
    <h1>Tags</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tag.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ tag.Title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ tag.Description }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ tag.CreatedAt ? tag.CreatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ tag.UpdatedAt ? tag.UpdatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_blog_tags_index') }}">back to list</a>

    <a href="{{ path('app_blog_tags_edit', {'id': tag.id}) }}">edit</a>

    {{ include('Admin/blog_tags/_delete_form.html.twig') }}
{% endblock %}