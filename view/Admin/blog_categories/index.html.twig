{% extends 'admin.html.twig' %}

{% block title %}BlogCategories index{% endblock %}

{% block body %}
    <h1>BlogCategories index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>CategoryName</th>
                <th>CategoryDescription</th>
                <th>CategoryImage</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for blog_category in blog_categories %}
            <tr>
                <td>{{ blog_category.id }}</td>
                <td>{{ blog_category.CategoryName }}</td>
                <td>{{ blog_category.CategoryDescription }}</td>
                <td>{{ blog_category.CategoryImage }}</td>
                <td>{{ blog_category.CreatedAt ? blog_category.CreatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ blog_category.UpdatedAt ? blog_category.UpdatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_blog_categories_show', {'id': blog_category.id}) }}">show</a>
                    <a href="{{ path('app_blog_categories_edit', {'id': blog_category.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_blog_categories_new') }}">Create new</a>
{% endblock %}