
<div class="col col-md-12">
    <div class="card">
        <div class="card-body">
            {{ form_start(form) }}
            <div class="row">
                <div class="col-md-4">
                    {{ form_row(form.CategoryName,{'attr':{'class':'form-control'}}) }}
                </div>
                <div class="col-md-8">
                    {{ form_row(form.CategoryDescription,{'attr':{'class':'form-control'}}) }}

                </div>
            </div>
            <button class="btn btn-sm btn-primary mt-2 p-2" type="submit">Save</button>
            {{ form_row(form._token) }}
            {{ form_end(form) }}
        </div>
    </div>
    <div class="card-footer">

    </div>
</div>