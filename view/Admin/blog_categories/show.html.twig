{% extends 'admin.html.twig' %}

{% block title %}BlogCategories{% endblock %}

{% block body %}
    <h1>BlogCategories</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ blog_category.id }}</td>
            </tr>
            <tr>
                <th>CategoryName</th>
                <td>{{ blog_category.CategoryName }}</td>
            </tr>
            <tr>
                <th>CategoryDescription</th>
                <td>{{ blog_category.CategoryDescription }}</td>
            </tr>
            <tr>
                <th>CategoryImage</th>
                <td>{{ blog_category.CategoryImage }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ blog_category.CreatedAt ? blog_category.CreatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ blog_category.UpdatedAt ? blog_category.UpdatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="card-footer">
        <a href="{{ path('app_blog_categories_index') }}">back to list</a>

        <a href="{{ path('app_blog_categories_edit', {'id': blog_category.id}) }}">edit</a>

        {{ include('Admin/blog_categories/_delete_form.html.twig') }}
    </div>

{% endblock %}